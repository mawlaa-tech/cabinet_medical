@model Microservice.Models.Medecin

@{
    ViewData["Title"] = "Supprimer - Medecin";
}

<h1>Supprimer</h1>

<h3>Êtes-vous sûr de vouloir supprimer?</h3>
<div>
    <h4>Medecin</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomMedecin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomMedecin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrenomMedecin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrenomMedecin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Retour</a>
    </form>
</div>
