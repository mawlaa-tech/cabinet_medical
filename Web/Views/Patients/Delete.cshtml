@model Microservice.Models.Patient

@{
    ViewData["Title"] = "Supprimer - Patient";
}

<h1>Supprimer</h1>

<h3>Êtes-vous sûr de vouloir supprimer?</h3>
<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomPat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomPat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrenPat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrenPat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatNaisPat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatNaisPat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SexPat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SexPat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhonePat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhonePat)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a class="btn btn-success" asp-action="Index">Retour a la Liste</a>
    </form>
</div>
