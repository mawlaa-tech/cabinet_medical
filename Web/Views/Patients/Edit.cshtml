@model Microservice.Models.Patient

@{
    ViewData["Title"] = "Modifier";
}

<h1>Modifier</h1>

<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomPat" class="control-label"></label>
                <input asp-for="NomPat" class="form-control" />
                <span asp-validation-for="NomPat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrenPat" class="control-label"></label>
                <input asp-for="PrenPat" class="form-control" />
                <span asp-validation-for="PrenPat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatNaisPat" class="control-label"></label>
                <input asp-for="DatNaisPat" class="form-control" />
                <span asp-validation-for="DatNaisPat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SexPat" class="control-label"></label>
                <select asp-for="SexPat" class="form-control" asp-items="ViewBag.Sexes">
                    <option value="">Selectionner un sexe</option>
                </select>
                <span asp-validation-for="SexPat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhonePat" class="control-label"></label>
                <input asp-for="PhonePat" class="form-control" />
                <span asp-validation-for="PhonePat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Mettre a jour" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-success" asp-action="Index">Retour a la liste</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
