@model IEnumerable<Microservice.Models.PlageHoraire>

@{
    ViewData["Title"] = "Index";
}

<h1>Plages horaires</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Creer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeureDebut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeureTer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActeMedical)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialite)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeureDebut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeureTer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActeMedical.Libelle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialite.Nom)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Modifier</a> |
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
