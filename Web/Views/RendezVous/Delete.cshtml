@model Microservice.Models.RendezVous

@{
    ViewData["Title"] = "Annuler - Rendez-vous";
}

<h1>Annuler</h1>

<h3>Êtes-vous sûr de vouloir annuler?</h3>
<div>
    <h4>Rendez-vous</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlageHoraire.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlageHoraire.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlageHoraire.HeureDebut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlageHoraire.HeureDebut)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlageHoraire.HeureTer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlageHoraire.HeureTer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlageHoraire.Medecin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlageHoraire.Medecin.NomComplet))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlageHoraire.ActeMedical)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlageHoraire.ActeMedical.Libelle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlageHoraire.Specialite)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlageHoraire.Specialite.Nom)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input class="btn btn-danger" type="submit" value="Annuler" /> |
        <a class="btn btn-success" asp-action="Index">Retour a la liste</a>
    </form>
</div>
